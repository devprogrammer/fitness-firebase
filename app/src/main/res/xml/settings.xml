<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/prefs_category_workout">

        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/prefs_vibrations_key"
            android:summary="@string/prefs_vibrations_summary"
            android:title="@string/prefs_vibrations_title" />

        <at.shockbytes.corey.common.core.util.view.SliderPreference
            android:defaultValue="@integer/prefs_time_countdown_default"
            android:key="@string/prefs_time_countdown_key"
            android:max="@integer/prefs_time_countdown_max"
            android:summary="@string/prefs_time_countdown_summary"
            android:text="@string/prefs_time_countdown_unit"
            android:title="@string/prefs_time_countdown_title" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/prefs_category_notifications">

        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/prefs_workout_day_notification_key"
            android:summary="@string/prefs_workout_day_notification_summary"
            android:title="@string/prefs_workout_day_notification_title" />

        <ListPreference
            android:defaultValue="@string/prefs_workout_day_notification_daytime_defValue"
            android:dependency="@string/prefs_workout_day_notification_key"
            android:entries="@array/workoutDaytimeReminder"
            android:entryValues="@array/workoutDaytimeReminder"
            android:key="@string/prefs_workout_day_notification_daytime_key"
            android:title="@string/prefs_workout_day_notification_daytime_title" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/prefs_weigh_notification_key"
            android:summary="@string/prefs_weigh_notification_summary"
            android:title="@string/prefs_weigh_notification_title" />

        <ListPreference
            android:defaultValue="@string/prefs_weigh_notification_day_default_value"
            android:dependency="@string/prefs_weigh_notification_key"
            android:entries="@array/daysFull"
            android:entryValues="@array/daysValues"
            android:key="@string/prefs_weigh_notification_day_key"
            android:title="@string/prefs_weigh_notification_day_title" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/prefs_category_about">

        <Preference
            android:summary="@string/prefs_developer_summary"
            android:title="@string/prefs_developer_title" />

        <Preference
            android:summary="@string/app_version"
            android:title="@string/prefs_version_title" />

    </PreferenceCategory>

</PreferenceScreen>