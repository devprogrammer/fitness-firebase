<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.shockbytes.corey">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".core.CoreyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".core.SignUpActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".core.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".core.SettingsActivity"
            android:label="Settings" />
        <activity
            android:name=".core.CreateWorkoutActivity"
            android:label="Create Workout"
            android:screenOrientation="portrait" />
        <activity android:name=".core.WorkoutDetailActivity" />
        <activity android:name=".core.WorkoutActivity" />

        <receiver
            android:name=".core.receiver.NotificationReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".core.receiver.OnBootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>