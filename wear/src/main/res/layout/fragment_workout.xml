<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wear_background"
    tools:context="at.shockbytes.corey.core.WorkoutActivity"
    tools:deviceIds="wear_round">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.wearable.view.BoxInsetLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:id="@+id/fragment_workout_main_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_box="all">

                <LinearLayout
                    android:id="@+id/fragment_workout_main_container_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="0dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"
                        android:src="@drawable/ic_clock"
                        android:tint="@android:color/white" />

                    <Chronometer
                        android:id="@+id/fragment_workout_chronometer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:fontFamily="sans-serif-light"
                        android:gravity="start"
                        android:paddingEnd="4dp"
                        android:paddingStart="4dp"
                        android:textColor="@android:color/secondary_text_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/fragment_workout_txt_pulse"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:fontFamily="sans-serif-light"
                        android:gravity="end"
                        android:paddingEnd="4dp"
                        android:paddingStart="4dp"
                        android:text="130"
                        android:textColor="@android:color/secondary_text_dark"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"
                        android:src="@drawable/ic_body_heart"
                        android:tint="@android:color/white" />

                </LinearLayout>

                <View
                    android:id="@+id/fragment_workout_main_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/fragment_workout_main_container_header"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:background="#ccc" />

                <at.shockbytes.corey.common.core.util.view.NonSwipeableViewPager
                    android:id="@+id/fragment_workout_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/fragment_workout_progress"
                    android:layout_below="@+id/fragment_workout_main_divider" />

                <ProgressBar
                    android:id="@+id/fragment_workout_progress"
                    style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_alignParentBottom="true"
                    android:progress="50"
                    android:progressTint="@color/colorAccent" />

            </RelativeLayout>

        </android.support.wearable.view.BoxInsetLayout>

        <ImageButton
            android:id="@+id/fragment_workout_btn_back"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_back"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/fragment_workout_btn_next"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_next"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/fragment_workout_btn_music"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_music"
            android:tint="@android:color/white" />


    </RelativeLayout>


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/fragment_workout_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="bottom"
        android:background="#424242"
        android:clipToPadding="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:weightSum="0.9">

            <ImageButton
                android:id="@+id/fragment_workout_media_btn_previous"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:src="@drawable/ic_music_previous"
                android:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/fragment_workout_media_btn_start_pause"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:src="@drawable/ic_play"
                android:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/fragment_workout_media_btn_next"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:src="@drawable/ic_music_next"
                android:tint="@android:color/white" />

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>

